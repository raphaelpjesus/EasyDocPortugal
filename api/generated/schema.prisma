// api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id       String  @id @default(uuid())
  name     String  @unique
  isActive Boolean @default(true)

  emailMain String?
  emailSub  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  workers   Worker[]
  machines  Machine[]
  worksites WorksiteCompany[]
  documents Document[]

  @@index([isActive])
}

model Worker {
  id       String  @id @default(uuid())
  fullName String
  email    String  @unique
  isActive Boolean @default(true)

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  worksites WorksiteWorker[]
  documents Document[]

  @@index([companyId])
  @@index([isActive])
}

model Machine {
  id       String  @id @default(uuid())
  name     String
  serial   String? @unique
  isActive Boolean @default(true)

  // máquina pertence “primariamente” a uma empresa
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  worksites WorksiteMachine[]
  documents Document[]

  @@index([companyId])
  @@index([isActive])
}

model Worksite {
  id       String  @id @default(uuid())
  name     String
  location String?
  isActive Boolean @default(true)

  startsAt DateTime?
  endsAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companies WorksiteCompany[]
  workers   WorksiteWorker[]
  machines  WorksiteMachine[]

  @@index([isActive])
}

model WorksiteCompany {
  id         String @id @default(uuid())
  worksiteId String
  companyId  String

  isActive Boolean   @default(true)
  joinedAt DateTime  @default(now())
  leftAt   DateTime?

  worksite Worksite @relation(fields: [worksiteId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([worksiteId, companyId])
  @@index([companyId])
}

model WorksiteWorker {
  id         String @id @default(uuid())
  worksiteId String
  workerId   String

  isActive Boolean   @default(true)
  joinedAt DateTime  @default(now())
  leftAt   DateTime?

  worksite Worksite @relation(fields: [worksiteId], references: [id], onDelete: Cascade)
  worker   Worker   @relation(fields: [workerId], references: [id], onDelete: Cascade)

  @@unique([worksiteId, workerId])
  @@index([workerId])
}

model WorksiteMachine {
  id         String @id @default(uuid())
  worksiteId String
  machineId  String

  isActive Boolean   @default(true)
  joinedAt DateTime  @default(now())
  leftAt   DateTime?

  worksite Worksite @relation(fields: [worksiteId], references: [id], onDelete: Cascade)
  machine  Machine  @relation(fields: [machineId], references: [id], onDelete: Cascade)

  @@unique([worksiteId, machineId])
  @@index([machineId])
}

enum DocumentOwnerType {
  COMPANY
  WORKER
  MACHINE
}

enum DocumentStatus {
  VALID
  EXPIRING
  EXPIRED
  MISSING
  PENDING_REVIEW
  REJECTED
}

model Document {
  id String @id @default(uuid())

  // “Dono” do documento (para reuso entre obras, o doc fica no owner)
  ownerType DocumentOwnerType
  companyId String?
  workerId  String?
  machineId String?

  // metadados do documento
  title     String
  docType   String // ex: "Seguro RC", "Formação SST", "Inspeção Máquina"
  fileKey   String // path/obj key (S3/minio/etc). Sem storage ainda, só o campo.
  mimeType  String?
  fileSize  Int?
  checksum  String? // opcional: para dedupe (sha256)
  issuedAt  DateTime?
  expiresAt DateTime?

  status DocumentStatus @default(PENDING_REVIEW)

  // relações (apenas uma deve estar preenchida)
  company Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  worker  Worker?  @relation(fields: [workerId], references: [id], onDelete: Cascade)
  machine Machine? @relation(fields: [machineId], references: [id], onDelete: Cascade)

  // auditoria
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerType])
  @@index([companyId])
  @@index([workerId])
  @@index([machineId])
  @@index([docType])
  @@index([status])
  @@index([expiresAt])
}
